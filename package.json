{
  "name": "idi-coins",
  "version": "1.0.0",
  "description": "idi-coins",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack/webpack.renderer.js && webpack --config webpack/webpack.main.js",
    "package": "electron-builder --win",
    "clean": "rimraf dist && rimraf release",
    "full-run": "npm run clean && npm run build && npm run package",
    "full-run-win": "npm run clean && npm run build && npm run package -- --win"
  },
  "build": {
    "appId": "com.idi.coins",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
